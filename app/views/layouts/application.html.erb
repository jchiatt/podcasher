<!DOCTYPE html>
<html>
  <head>
    <title>Podcasher</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,500,600,900" rel="stylesheet" type="text/css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render partial: 'layouts/navbar' %>

    <div class="shows-view-container">
      <% unless flash.empty? %>
      <div class="flash-notifications">
        <div class="container">
          <% flash.each do |alert_type, message| %>
          <div class="row">
            <div class="alert <%= flash_bootstrap_class(alert_type) %>" role="alert"><%= raw message %></div>
          </div>
          <% end %>
        </div>
      </div>
      <% end %>
  
      <div class="container-fluid">
        <%= yield %>
      </div>
  </body>
</html>
