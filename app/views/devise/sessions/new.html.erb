<div class="card devise-bs">
  <h3 class="card-header"><%= t('user.sign_in', default: 'Sign in') %></h3>
  <div class="card-body">    
    <%= devise_error_messages! %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
      <div class="form-group">
        <%= f.label :email, t('user.email') %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, t('user.password') %>
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group form-check">
          <%= f.label :remember_me, class: 'form-check-label' do %>
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= t('activerecord.attributes.user.remember_me', default: 'Remember me') %>
          <% end %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit  t('user.sign_in', default: 'Sign in'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

  <div class="card-footer">
    <%= render 'devise/shared/links' %>
  </div>
</div>

